async def cyber_physical_integration():
    """Integrate cyber and physical security systems"""
    from aethermind_robotics.security import IntegratedSecuritySystem
    
    integrated_system = IntegratedSecuritySystem(
        physical_components=["robots", "sensors", "barriers", "access_controls"],
        cyber_components=["firewalls", "ids", "siem", "endpoint_protection"],
        integration_level="full_fusion"
    )
    
    # Unified threat detection
    threats = await integrated_system.detect_cross_domain_threats(
        correlation_rules=[
            "physical_intrusion_correlates_with_cyber_attack",
            "social_engineering_leads_to_physical_breach",
            "supply_chain_attack_enables_physical_access"
        ],
        analysis_depth="deep_correlation"
    )
    
    # Coordinated response
    response = await integrated_system.coordinated_response(
        threat=threats["primary"],
        physical_response="contain_and_neutralize",
        cyber_response="isolate_and_eradicate",
        information_response="secure_and_preserve",
        coordination_timing="synchronized"
    )
    
    # Post-incident analysis
    analysis = await integrated_system.conduct_cross_domain_forensics(
        physical_evidence=True,
        digital_evidence=True,
        network_evidence=True,
        timeline_reconstruction=True,
        attribution_analysis=True
    )
    
    return {"threats": threats, "response": response, "analysis": analysis}
